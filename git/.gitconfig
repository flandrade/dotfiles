[user]
  name = Fernanda Andrade
  email = flandrade@users.noreply.github.com
[core]
  editor = vim
[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
[interactive]
  diffFilter = (echo && diff-so-fancy)
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[web]
  browser = firefox
[alias]
  l = log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit
